<script>
(function(){
function show(id){
 document.querySelectorAll('.page').forEach(p=>p.classList.remove('active'));
 document.getElementById(id).classList.add('active');
}
window.openSecondPage=()=>show('page2');

window.generateTags=()=>{
 let t=document.getElementById('videoTitle').value.trim();
 if(!t)return;
 let tags=[t,t+" viral",t+" youtube",t+" shorts",t+" trending"];
 let box=document.getElementById('result');
 box.innerHTML="";
 tags.forEach(x=>{
   let s=document.createElement('span');
   s.className="tag";
   s.innerText=x;
   s.onclick=()=>navigator.clipboard.writeText(x);
   box.appendChild(s);
 });
}
})();
</script>

