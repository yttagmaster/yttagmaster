function copy(id){
  const text=document.getElementById(id).innerText;
  if(!text){alert("рдкрд╣рд▓реЗ Generate рдХрд░реЗрдВ");return;}
  navigator.clipboard.writeText(text);
  alert("Copied тЬФя╕П");
}
