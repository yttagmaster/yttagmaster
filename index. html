<!-- ================= SECOND PAGE ================= -->
<div class="page" id="generatorPage">

    <h1>Generate tags for your YouTube videos</h1>
    <p>
        Quickly and easily find tags and improve discoverability with the
        powerful YT Viral Tags Generator.
    </p>

    <input id="videoTitle" type="text" placeholder="Enter video title">
    <button onclick="generateTags()">Generate</button>

    <div class="box" id="tagResult"></div>

    <h2>How to use the Tag Generator</h2>
    <p><strong>Step 1:</strong> Add your video title</p>
    <p><strong>Step 2:</strong> View generated tags</p>
    <p><strong>Step 3:</strong> Copy generated tags</p>

    <h2>Frequently Asked Questions</h2>
    <p>• What is a YouTube Tag Generator?</p>
    <p>• How does this tag generator work?</p>
    <p>• Are these tags safe to use on YouTube?</p>
    <p>• Do I need technical knowledge?</p>
    <p>• Can I edit generated tags?</p>
    <p>• Is this tag generator free to use?</p>

</div>

<script>
(function(){
    function showPage(id){
        document.querySelectorAll('.page').forEach(p=>p.classList.remove('active'));
        document.getElementById(id).classList.add('active');
    }

    window.openGenerator = function(){
        showPage('generatorPage');
    }

    window.generateTags = function(){
        const title = document.getElementById('videoTitle').value.trim();
        if(!title) return;

        const tags = [
            title,
            title + " viral",
            title + " youtube",
            title + " shorts",
            title + " trending"
        ];

        const box = document.getElementById('tagResult');
        box.innerHTML = "";
        tags.forEach(t=>{
            const span = document.createElement('span');
            span.className="tag";
            span.textContent = t;
            span.onclick = ()=>navigator.clipboard.writeText(t);
            box.appendChild(span);
        });
    }
})();
</script>

