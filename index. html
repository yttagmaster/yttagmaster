<script>
function generateTags(){
  const k=document.getElementById("tagInput").value.trim();
  if(!k){alert("Keyword рдбрд╛рд▓рд┐рдП");return;}
  const b=k.toLowerCase();
  const tags=[
    b,b+" video",b+" shorts",b+" viral",b+" trending",
    "viral "+b,"trending "+b,b+" youtube",b+" reels",
    b+" new",b+" latest",b+" hindi",b+" india",
    b+" tips",b+" tutorial",b+" hack",
    b+" full video",b+" short video",
    b+" 2025",b+" update",b+" today",
    b+" explained",b+" reaction",b+" news"
  ];
  document.getElementById("tagOutput").innerText=tags.join(", ");
}

function generateTitle(){
  const k=document.getElementById("titleInput").value.trim();
