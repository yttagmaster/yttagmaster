<script>
function generateTags(){
  let k=document.getElementById("tagInput").value;
  if(!k)return;
  document.getElementById("tagOutput").innerText=
  k+", "+k+" video, "+k+" shorts, "+k+" viral, "+k+" youtube, trending "+k+", viral tags";
}

function generateTitle(){
  let t=document.getElementById("titleInput").value;
  if(!t)return;
  document.getElementById("titleOutput").innerText=
  "üî• "+t+" | Viral Video üî•\n\n#"+t.replace(/\s/g,"")+" #viral #trending #youtube #shorts #reels";
}

