<script>
(function(){
const home=document.getElementById("home");
const gen=document.getElementById("generator");
const locked=document.getElementById("locked");
const premium=document.getElementById("premium");

window.openGenerator=function(){
    home.classList.remove("active");
    gen.classList.add("active");
    checkLogin();
}

window.login=function(){
    localStorage.setItem("ytLogin","yes");
    alert("Login successful!");
}

function checkLogin(){
    if(localStorage.getItem("ytLogin")==="yes"){
        locked.style.display="none";
        premium.style.display="block";
    }
}

window.generateTags=function(){
    const k=document.getElementById("keyword").value.trim();
    if(!k){alert("Enter keyword");return;}

    let tags=[
        k,k+" video",k+" shorts",k+" viral",k+" trending",
        "yt viral tag","youtube seo","get views","youtube growth",
        "viral video","youtube tips","youtube tags","increase views",
        k+" 2025",k+" youtube"
    ];

    let out="";
    tags.forEach(t=>{
        if((out+t).length<500) out+=t+", ";
    });

    document.getElementById("tags").style.display="block";
    document.getElementById("copyTags").style.display="block";
    document.getElementById("tags").textContent=out.slice(0,-2);

    if(localStorage.getItem("ytLogin")==="yes"){
        document.getElementById("hashtags").textContent=
        tags.map(t=>"#"+t.replace(/\s+/g,"")).join(" ");

        document.getElementById("description").textContent=
        `This video is about ${k}. Watch till end for more.\n\n`+
        tags.map(t=>"#"+t.replace(/\s+/g,"")).join(" ");

        document.getElementById("title").textContent=
        `${k} | Viral YouTube Video 2025`;
    }
}

window.copy=function(id){
    navigator.clipboard.writeText(document.getElementById(id).textContent)
    .then(()=>alert("Copied!"));
}
})();
</script>

