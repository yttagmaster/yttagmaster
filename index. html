<!-- GENERATOR -->
<div id="generator" class="page">
    <h1>Tag Generator</h1>

    <input id="keyword" class="input" placeholder="Add your video title or keyword">

    <button class="btn" onclick="generateTags()">Generate Video Tags</button>

    <div id="tags" class="box" style="display:none"></div>
    <button id="copyTags" class="btn copy" style="display:none" onclick="copy('tags')">ğŸ“‹ Copy Tags</button>

    <hr style="margin:25px 0;border-color:#333">

    <!-- LOCKED FEATURES -->
    <div id="locked">
        <h1 class="lock">ğŸš€ Hashtag Generator ğŸ”’</h1>
        <h1 class="lock">ğŸ“ Description Generator ğŸ”’</h1>
        <h1 class="lock">ğŸ·ï¸ Title Generator ğŸ”’</h1>
        <p class="small">Login required to unlock premium features</p>
    </div>

    <!-- UNLOCKED -->
    <div id="premium" style="display:none">
        <h1>ğŸš€ Hashtags</h1>
        <div id="hashtags" class="box"></div>
        <button class="btn copy" onclick="copy('hashtags')">Copy Hashtags</button>

        <h1>ğŸ“ Description</h1>
        <div id="description" class="box"></div>
        <button class="btn copy" onclick="copy('description')">Copy Description</button>

